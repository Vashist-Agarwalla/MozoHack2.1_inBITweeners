<body>
    <%- include('./partials/navbar') %>

        <div class="contain1">
            <div class="input">
                <form style="border:1px solid #ccc" action="/signup" method="POST">
                    <div class="container2">
                        <h1>Signup</h1>
                        <p>Please fill in this form to login into your account.</p>
                        <hr>

                        <label for="username"><b>Username</b></label>
                        <input type="text" placeholder="Enter Username" name="username" required>

                        <label for="password"><b>Password</b></label>
                        <input type="password" placeholder="Enter Password" name="password" required>

                        <label for="username"><b>Enter location</b></label>
                        <input type="text" placeholder="Enter Location" name="location" required>

                        <div class="clearfix">
                            <button type="submit" class="signupbtn">Signup</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <%- include('./partials/foot') %>

</body>

